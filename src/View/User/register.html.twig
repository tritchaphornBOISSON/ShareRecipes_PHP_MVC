{% extends 'layout.html.twig' %}

{% block content %}
<div class="container container-section container-75" id="login-form">
    <form action="" method="post">
        <img class="my-5" src="/assets/images/logo-color.png" alt="logo">
        <h2 class="display-5 mb-3 text-center">Please fill out for register</h2>
        <div class="form-floating my-2 w-50 center-form">
            <span class="text-danger">{{ errors['firstname'] }}</span>
            <input type="text" class="form-control" id="floatingPassword" name="firstname" placeholder="First Name">
            <label for="floatingFirstname">First Name</label>
        </div>
        <div class="form-floating my-2 w-50 center-form">
            <span class="text-danger">{{ errors['lastname'] }}</span>
            <input type="text" class="form-control" id="floatingPassword" name="lastname" placeholder="Last Name">
            <label for="floatingLastname">Last Name</label>
        </div>
        <div class="form-floating my-2 w-50 center-form">
            <span class="text-danger">{{ errors['username'] }}</span>
            <input type="text" class="form-control" id="floatingPassword" name="username" placeholder="Username">
            <label for="floatingUsername">Username</label>
        </div>
        <div class="form-floating my-2 w-50 center-form">
            <span class="text-danger">{{ errors['email'] }}</span>
            <input type="email" class="form-control" id="floatingInput" name="email" placeholder="name@example.com">
            <label for="floatingEmail">Email</label>
        </div>
        <div class="form-floating my-2 w-50 center-form">
            <span class="text-danger">{{ errors['password'] }}</span>
            <input type="password" class="form-control" id="floatingPassword" name="password" placeholder="Password">
            <label for="floatingPassword">Password</label>
        </div>
        <div class="form-floating my-2 w-50 center-form">
            <span class="text-danger">{{ errors['confirm_password'] }}</span>
            <input type="password" class="form-control" id="floatingPasswordConfirm" name="confirm_password" placeholder="Confirm Password">
            <label for="floatingPasswordConfirm">Confirm Password</label>
        </div>

        <div class="button-login mb-5">
            <button class="w-50 btn btn-lg button button-orange" type="submit">Register</button>
        </div>
    </form>
</div>
{% endblock %}